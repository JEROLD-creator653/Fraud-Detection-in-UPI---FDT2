# FDT Environment Variables Template
# Copy this file to .env and fill in your actual values

# Groq AI API Key for Chatbot (Get free key from https://console.groq.com)
GROQ_API_KEY=your_groq_api_key_here

# Database URL (PostgreSQL)
DB_URL=postgresql://fdt:fdtpass@127.0.0.1:5432/fdt_db

# JWT Secret Key (Generate a random string for production)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=change_this_to_random_secret_in_production

# Admin Credentials
ADMIN_USERNAME=admin
# Generate password hash with: python -c "from passlib.hash import pbkdf2_sha256; print(pbkdf2_sha256.hash('YourPassword'))"
ADMIN_PASSWORD_HASH=your_admin_password_hash_here

# CORS Allowed Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Fraud Detection Thresholds (0.0 to 1.0)
DELAY_THRESHOLD=0.35
BLOCK_THRESHOLD=0.70
